{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "./",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2018",
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@app/*": [ "./app/*" ],
      "@node_modules/*": [ "../node_modules/*" ]
    },
    "lib": [
      "es2017",
      "es2016",
      "es2015",
      "dom"
    ]
  }
}
